//HERO HEADER
.hero-header {
  height: 70vh;
}

.hero-header__container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}


.underline-strong strong{
  background-image: url("https://cdn.shopify.com/s/files/1/0072/0561/7711/files/Calque_14.png?8187");
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center 100%;
}

//LOGOS

.logos__subtitle {
  padding-top: 60px;
  padding-bottom: 30px;

  p{
    color: white;
  }
}

.logos {
  background-color: black;
}


.logos__image-logo {
  width: 80%;
}

.logos__container-cta {
  padding-bottom: 60px;
}

.logos__cta {
  color: white;
  font-weight: bold;
  font-size: 1.2rem;
}


//SLIDER

.slider {
  width: 100vw;
}

.slider__slides {
   width: 100%;
   z-index: 0;
}

.slider__image {
  width: 100vw;
  height: 420px;
}

.slider__encart{
  z-index: 2;
  position: absolute;
  top: 50%;
  left: 60%;
  transform: translate(-50%,-50%);
  background-color: #ffffff;
  width: 300px;
  height: auto;
  padding: 24px;
}

.slider_logo {
  width: 70%;
}

.slick-next {
  z-index: 10;
}
