//HERO HEADER
.hero-header {
  height: 70vh;
}

.hero-header__container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

strong{
  background-image: url("https://cdn.shopify.com/s/files/1/0072/0561/7711/files/Calque_14.png?8187");
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center 100%;
}

//LOGOS

.logos__subtitle {
  padding-top: 60px;
  padding-bottom: 30px;

  p{
    color: white;
  }
}

.logos {
  background-color: black;
