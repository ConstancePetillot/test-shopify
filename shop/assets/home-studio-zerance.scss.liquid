//INFINTE TEXT

.infinite-text__container {
  background-color: #ffcd1a;
  height: 4rem;
  max-width: 100%;
  overflow: hidden;
  display: block;
}

.infinite-text__title {
  white-space: nowrap;
  color: white;
  display: block;
  top: 50%;
  left: 0;
  transform: translate(-50%, -50%);
  animation: defile 20s  infinite;
  animation-delay: 0s;
  animation-direction: normal;
  animation-fill-mode: none;
  animation-play-state: running;
  animation-name: defile;
  animation-duration: 5s;
  animation-timing-function: linear;

  @media (min-width: 768px) {
    animation-duration: 10s;
  }
}

.infinite-text__text p{
  color: white;
}


@keyframes defile {
  0%,
  100% {
    margin-left: 0;
  }
  99.99% {
    margin-left: -100%;
  }
}

