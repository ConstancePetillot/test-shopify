.y-h1 {
  font-size: 2rem;
  font-weight: bold;
  color: black;

  @media(min-width: 768px) {
    font-size: 3rem;
  }
}
.y-h2 {
  font-size: 2.4rem;
  color: black;

  @media(min-width: 768px) {
    font-size: 1.6rem;
  }
}

.y-p {
  font-size: 1rem;
  color: black;

  @media(min-width: 768px) {
    font-size: 1.1rem;
  }
}

.height--small {
  height: 60vh;
}

.height--normal {
  height: 70vh;
}

.height--full {
  height: 80vh;
}

//HEADER
.header {
  display: flex;
  justify-content: space-evenly;
  margin-top: 20px;

  @media(min-width: 768px) {
    justify-content: space-between;
    margin-right: 30px;
    margin-left: 30px;
}
}

.header__logo {
  width: 60%;
  padding-left: 15px;

  @media(min-width: 768px) {
    padding-left: 30px;
  }
}

.header__menu {
  display: none;

  @media(min-width: 768px) {
  display: flex;
  }


  a{
    color : black;
    font-weight: bold;

    @media(min-width: 768px) {
    padding-right: 30px;
    margin-top: 20px;
    display: flex;
    }
  }
}

//HERO HEADER
.hero-header {
  height: 65vh;
}

.hero-header__container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 80%;

  @media(min-width: 768px) {
    width: 60%;
  }
}

.hero-header__title {
  line-height: 1.6;
  max-width: 50vw;
  margin: auto;
}

.underline-strong strong{
  background-image: url("https://cdn.shopify.com/s/files/1/0072/0561/7711/files/Calque_14.png?8187");
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center 100%;
}

//LOGOS

.logos {
  background-color: black;
}

.logos__subtitle {
  padding-top: 60px;
  padding-bottom: 30px;

  p{
    color: white;
  }
}

.logos__container {
  max-width: 700px;
  margin: auto;
}

.logos__image-logo {
  width: 80%;
}

.logos__container-cta {
  padding-bottom: 60px;
}

.logos__cta {
  color: white;
  font-weight: bold;
  font-size: 1.2rem;
}


//SLIDER

.slider {
  width: 100vw;
}

.slider__slides {
   width: 100%;
}

.slider__image {
  width: 100vw;
  object-fit: cover;
}

.slider__encart{
  z-index: 2;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background-color: #ffffff;
  width: 300px;
  height: auto;
  padding: 24px;

  @media (min-width: 768px) {
    left: 70%;
  }
}

.slider_logo {
  width: 55%;

  @media (min-width: 768px) {
    width: 70%;
  }
}

.slider__arrow {
  position: absolute;
  z-index: 20;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 25px;
  cursor: pointer;


}

.slider__arrow--prev {
  left: 5%;
}

.slider__arrow--next {
  left: 95%;
}

//INFINTE TEXT
.infinite-text__container {
  background-color: #ffcd1a;
  height: 4rem;
  max-width: 100%;
  overflow: hidden;
  display: block;
}

.infinite-text__title {
  white-space: nowrap;
  color: white;
  display: block;
  top: 50%;
  left: 0;
  transform: translate(-50%, -50%);
  animation: defile 20s  infinite;
  animation-delay: 0s;
  animation-direction: normal;
  animation-fill-mode: none;
  animation-play-state: running;
  animation-name: defile;
  animation-duration: 5s;
  animation-timing-function: linear;

  @media (min-width: 768px) {
    animation-duration: 10s;
  }
}

.infinite-text__text p{
  color: white;
}


@keyframes defile {
  0%,
  100% {
    margin-left: 0;
  }
  99.99% {
    margin-left: -100%;
  }
}
