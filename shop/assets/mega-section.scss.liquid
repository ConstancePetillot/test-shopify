// GENERAL
.margin--0 {
  margin-bottom: 0px;
}

.margin--25 {
  margin-bottom: 25px;
}

.margin--50 {
  margin-bottom: 50px;
}

.margin--75 {
  margin-bottom: 75px;
}

.margin-bottom {
  margin-bottom: 15px;
}

//REASSURANCE
.reassurance {
  padding: 2% 0%;
}

.reassurance__image {
  width: 80%;
  height: auto;
}

@media(min-width: 768px) {
  .reassurance__image {
    width: 40%;
  }
}

// BANNER

.banner-slider__encart{
  z-index: 2;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 70vw;
  height: auto;
  padding: 24px;
}

@media(min-width: 768px) {
  .banner-slider__encart{
    left: 70%;
    width: 30vw;
  }
}

// ALTERNATE

.alternate {
  display: block;
}

.alternate__image {
  width: 100%;
}

.alternate__text-container {
  width: 90vw;
}

@media(min-width: 768px) {
  .alternate__image {
    width: 100%;
  }

  .alternate__text-container {
    padding: 4vw;
    max-width: 600px;
    max-height: 500px;
  }
}

@media(min-width: 1200px) {
  .alternate__image {
    width: 80%;
  }

  .alternate__text-container {
    padding: 4vw;
    max-height: 600px;
  }
}


@media(min-width: 1400px) {
  .alternate__text-container {
    padding: 4vw;
    max-height: 700px;
  }
}

// FEATURED PRODUCT
.section__featured-product {
  display: flex;
  justify-content: center;
}

.featured-product__content-wraper {
  display: flex;
  max-width: 1400px !important;
  margin-left: 20px;
  margin-right: 20px;
}

.featured-product__images-container {
  width: 70%;
}

.featured-product__image--big {
  margin: auto;
  width: 100%;
  height: 100%;
  object-fit: cover;
  box-sizing: border-box;
}

.featured-product__main-image {
  height: 70%;
  width: 80%;
  margin: auto;
}

.featured-product__image--big {
  height: 100%;
}

.featured-product__secondaries-images {
  display: flex;
  justify-content: flex-start;
  margin: auto;
}

.featured-product__image--small {
  margin: auto;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.featured-product__infos {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.featured-product__info-title {
  margin-bottom: 15px;
}

.featured-product__price-wrapper {
  margin-bottom: 15px;
}

.featured-product__form {
  margin-bottom: 15px;
}

.featured-product__cta {
  margin-bottom: 15px;
  margin-top: 15px;
}

.featured-product__description {
  width: 90%;
}
