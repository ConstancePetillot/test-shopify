<section id="section-{{ section.id }}" class="section relative" data-section-id="{{ section.id }}" data-section-type="slider">
  <div data-slider class="slider {{ section.settings.slider_height}}">
    {% for block in section.blocks %}
      <div class="slider__slides relative align-center">
        <img class="slider__image" src="{{ block.settings.slider_image | img_url : '1050x' }}">
        <div class="slider__encart">
          <div class="slider_subtitle align-center">{{ block.settings.slider_subtitle }}</div>
          <div class="align-center">
            <img class="slider_logo align-center" src="{{ block.settings.slider_logo | img_url : '250x' }}">
          </div>
          <div class="slider_slider_richtext align-center">{{ block.settings.slider_richtext }}</div>
        </div>
      </div>
    {% endfor %}
  </div>
  <div>
    <img data-arrow-next class="slider__arrow slider__arrow--next" src="{{ section.settings.chevron_next | img_url : '250x' }}">
  </div>
  <div>
    <img data-arrow-prev class="slider__arrow slider__arrow--prev slick-prev" src="{{ section.settings.chevron_previous | img_url : '250x' }}">
  </div>
</section>

{% schema %}
  {
    "name": "Slider",
		"max_blocks" : 8,
    "settings": [
      {
        "type": "select",
        "id": "slider_height",
        "label": "Choisir la hauteur du slider",
				"options": [
          { "value" : "height--small", "label": "Petit"},
          { "value" : "height--normal", "label": "Normal"},
          { "value" : "height--full", "label": "Grand"}
        ]
      },
      {
        "type": "image_picker",
        "id": "chevron_next",
        "label": "Chevron slider suivant"
      },
      {
        "type": "image_picker",
        "id": "chevron_previous",
        "label": "Chevron slider precedent"
      }
    ],

	"blocks": [
      {
        "type": "image",
        "name": "slider",
        "settings": [
          {
            "type": "image_picker",
            "id": "slider_image",
            "label": "Images background"
          },
					{
            "type": "image_picker",
            "id": "slider_logo",
            "label": "logo du client"
          },
					{
            "type": "richtext",
            "id": "slider_subtitle",
            "label": "Sous-titre",
						"default" : "<P>Ajoutez un sous-titre</p>"
          },
					{
            "type": "richtext",
            "id": "slider_richtext",
            "label": "Text",
						"default" : "<p>Ajoutez un texte</p>"
          }
        ]
      }
    ],
		"presets": [
      {
        "name": "slider_clients",
        "category": "slideshow"
      }
    ]
  }
{% endschema %}
