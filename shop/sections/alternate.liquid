<section id="section-{{ section.id }}" class="section" data-section-id="{{ section.id }}" data-section-type="alternate">
  <div class="alternate">
    {% if section.settings.title != blank %}
    <h2 class="alternate__title z-h2 align-center"> {{ section.settings.title }} </h2>
    {% endif %}
    {% if section.settings.text != blank %}
    <div class="reassurance__text align-center">
      {{ section.settings.text }}
    </div>
    {% endif %}

    <div class="z-grid z-grid--center ">
      {% if section.settings.invert_section == false %}
      <div class="1/2 z-grid__cell ">
        <div class="align-left alternate__ImgContainer">
          <img class="alternate__image" src="{{ section.settings.image | img_url : '350x' }}">
        </div>
      </div>
      {% endif %}
        <div class="1/3 z-grid__cell">
          <h3 class="align-center z-h3">{{ section.settings.content_title }}</h3>
          <div class="align-center">{{ section.settings.richtext}}</div>
          <button class=".item-center">{{ section.settings.button_link}}{{ section.settings.linktext}}
          </button>
        </div>
        {% if section.settings.invert_section == true %}
        <div class="1/2 z-grid__cell ">
          <div class="align-right alternate__container">
            <img class="alternate__image" src="{{ section.settings.image | img_url : '350x' }}">
          </div>
        </div>
        {% endif %}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "alternate",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Title"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Add custom text below",
        "default": "<p>Add your text here</p>"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "content_title",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "richtext",
        "label": "text"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "id": "linktext",
        "type": "text",
        "label": "Button text",
        "default": "Click here"
      },
      {
        "id": "invert_section",
        "type": "checkbox",
        "label": "Invert section"
      },
      {
        "type": "select",
        "id": "container_size",
        "options": [
          { "value:"{{ section.settings.container--small }}", "label": "Small container"},
          { "value:"{{ section.settings.container }}", "label": "Normal container"},
          { "value:"{{ section.settings.container--full }}", "label": "Full container"}
        ],
        "label": "Container size"
      }
    ],
    "presets": [
      {
        "name": "alternate",
        "category": "Alternate"
      }
    ]
  }
{% endschema %}
