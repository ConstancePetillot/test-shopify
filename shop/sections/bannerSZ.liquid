<section id="section-{{ section.id }}" class="section" data-section-id="{{ section.id }}" data-section-type="hero-header">
  <div class="hero-header relative align-center {{ section.settings.banner_height}}">
    <div class="hero-header__container align-center">
      <p class="hero-header__subtitle align-center">{{ section.settings.hero_subtitle }}</p>
      <h1 class="hero-header__title underline-strong y-h1 align-center">{{ section.settings.hero_title }}</h1>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "hero-header",
    "settings": [
      {
        "type": "text",
        "id": "hero_subtitle",
        "label": "Text",
        "default": "Ecrivez votre sous-titre"
      },
      {
        "type": "select",
        "id": "banner_height",
        "label": "Choisir la hauteur de la banni√®re",
				"options": [
          { "value" : "height--small", "label": "Petit"},
          { "value" : "height--normal", "label": "Normal"},
          { "value" : "height--full", "label": "Grand"}
        ]
      },
			{
        "type": "richtext",
        "id": "hero_title",
        "label": "heading",
        "default": "<p>Ajoutez votre titre</p>"
      }
    ],
    "presets": [
      {
        "name": "Hero Header",
        "category": "Hero Header"
      }
    ]
  }
{% endschema %}
