<section id="section-{{ section.id }}" class="section" data-section-id="{{ section.id }}" data-section-type="infiniteText">
  <div class="infinite-text">
    <div class="infinite-text__text">{{ section.settings.text_infinite }}</div>
  </div>
</section>


{% schema %}
  {
    "name": "infinite_text",
    "settings": [
      {
        "type": "richtext",
        "id": "text_infinite",
        "label": "Texte",
				"default" : "<p>Entrez votre texte</p>"
      },
			{
				"type": "range",
        "id": "text_speed",
        "min": 1,
        "max": 5,
        "step": 1,
        "unit": "sc",
        "label": "Vitesse de d√©filement du texte",
        "default": 3
			}
    ],
    "presets": [
      {
        "name": "Infinite-Text",
        "category": "Text"
      }
    ]
  }
{% endschema %}
